          span.section__managment__name CTO Kert Hallik
          span.section__managment__post Chief Technical Officer
        .section__managment__item
          .section__managment__img-wrapper
            img(src="images/userpic/6.jpg", alt="").section__managment__img
          span.section__managment__name CIO Emma Dean
          span.section__managment__post Chief Information Officer
        .section__managment__item
          .section__managment__img-wrapper
            img(src="images/userpic/7.jpg", alt="").section__managment__img
          span.section__managment__name COO Valter Berg
          span.section__managment__post Executive Director
      .row 
        .section__managment__item
          .section__managment__img-wrapper
            img(src="images/userpic/8.jpg", alt="").section__managment__img
          span.section__managment__name CCO Mason Nash
          span.section__managment__post Director of the negotiation and enforcement procedures
        .section__managment__item
          .section__managment__img-wrapper
            img(src="images/userpic/9.jpg", alt="").section__managment__img
          span.section__managment__name CSO Karl Östlund
